{
  "name": "spaceipsum",
  "version": "1.0.0",
  "description": "A lorem ipsum generator for space quotes!",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all build:css build:html",
    "build:css": "postcss src/site/_includes/css/style.css -o ./.tmp/css/style.css",
    "build:html": "eleventy",
    "watch": "npm-run-all --parallel watch:css watch:html",
    "watch:css": "postcss src/site/_includes/css/style.css -o ./.tmp/css/style.css --watch",
    "watch:html": "eleventy --serve --port=8182"
  },
  "author": "Sean Herron",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.6",
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "autoprefixer": "^10.2.1",
    "clipboard": "^2.0.6",
    "dotenv": "^8.2.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "node-fetch": "^2.6.1"
  }
}
